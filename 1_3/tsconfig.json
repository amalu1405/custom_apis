{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
  },
  "include": [
    "src/**/*"
  ], // Include all files in the src directory
  "exclude": [
    "node_modules"
  ] // Exclude the node_modules directory
}